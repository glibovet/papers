<?xml version="1.0" encoding="UTF-8" ?>
<crawler>
    <base-urls>
        <url>http://www.exaple.com/about</url>
        <url>www.example.com</url>
        <url>www.example.com/about</url>
    </base-urls>
    <frequency>1000</frequency>
    <startup-in>0</startup-in>

    <!-- if specified templates were found and their 'weight'
    is more or equal 1, then it'll be stored according to the 'store' template -->
    <page min-weigth="1">
        <template weight="0.5" order="1" action="redirect|store">a[href^='/article/c/']</template>
        <template weight="0.1" action="store" format="plain">#mainContent > div</template>
    </page>

</crawler>